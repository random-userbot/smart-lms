# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# Application Settings
APP_DEBUG=false
APP_SECRET_KEY=your_secret_key_here_use_32_char_random_string

# Database Credentials (if using PostgreSQL/MySQL)
DB_ENABLED=false
DB_HOST=localhost
DB_PORT=5432
DB_NAME=smart_lms
DB_USER=lms_user
DB_PASSWORD=your_secure_password_here

# Admin User (for initial setup only)
# These should be changed immediately after first login
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
# Leave blank - will force password creation on first run
ADMIN_INITIAL_PASSWORD=

# Security Settings
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/smart_lms.log

# OpenFace (if using external binary)
OPENFACE_EXECUTABLE_PATH=

# Privacy Settings
REQUIRE_CONSENT=true
STORE_RAW_VIDEO=false
DATA_RETENTION_DAYS=365

# Feature Flags
ENABLE_WEBCAM_TRACKING=true
ENABLE_NLP_FEEDBACK=true
ENABLE_TEACHER_EVALUATION=true

# Deployment
STREAMLIT_SERVER_ADDRESS=localhost
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HEADLESS=false
